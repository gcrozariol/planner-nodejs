generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Trips {
  id          String   @id @default(uuid())
  destination String
  isConfirmed Boolean  @default(false)
  startsAt    DateTime
  endsAt      DateTime
  createdAt   DateTime @default(now())

  @@map("trips")
}
